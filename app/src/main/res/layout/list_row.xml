<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/White">

    <TextView
        android:id="@+id/groupInputDateKey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/dateString"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/groupInputDateValue"
        android:layout_toRightOf="@+id/groupInputDateKey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="YYYY-MM-DD"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/groupTotalInputPcKey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/groupTotalInputPcValue"
        android:text="@string/totalPrice"/>

    <TextView
        android:id="@+id/groupTotalInputPcValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="9,999"/>
</RelativeLayout>